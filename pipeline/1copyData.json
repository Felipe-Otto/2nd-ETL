{
	"name": "1copyData",
	"properties": {
		"activities": [
			{
				"name": "excelToCsv",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "ExcelSource",
						"additionalColumns": [
							{
								"name": "dataCarga",
								"value": {
									"value": "@utcnow()",
									"type": "Expression"
								}
							}
						],
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_fixo_excel",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_generico_csv",
						"type": "DatasetReference",
						"parameters": {
							"container": "csv",
							"arquivo": "cor.csv",
							"delimitador": ";"
						}
					}
				]
			}
		],
		"folder": {
			"name": "activities1"
		},
		"annotations": [],
		"lastPublishTime": "2022-12-07T18:53:22Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
